<div class="table-responsive">
<table class="table table-dark">
  <thead>
  <tr>
    <th scope="col">Sale ID</th>
    <th scope="col">Item ID</th>
    <th scope="col">Status</th>
    <th scope="col">Wallet</th>
    <th scope="col">Created At</th>
    <th scope="col">NowPayments URL</th>
    <th scope="col">Mint Transaction</th>
  </tr>
  </thead>
  <tbody>
<% @sales.each do |sale| %>
    <tr>
      <td><%= link_to sale.id, sales_checkout_url(sale.nft_asset_id) %></td>
      <td><%= link_to sale.nft_asset_id, item_url(sale.nft_asset_id) %></td>
      <td><%= sale.aasm_state %></td>
      <td><%= sale.nft_owner %></td>
      <td><%= sale.created_at %></td>
      <td><%= sale.invoice_url %></td>
      <td><%= sale.tx_hash %></td>
    </tr>
<% end %>
  </tbody>
</table>
</div>
